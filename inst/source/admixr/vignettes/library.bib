	journal = {Current Opinion in Genetics \& Development},
	author = {Simons, Yuval B and Sella, Guy},
	month = dec,
	year = {2016},
	pages = {150--158},
	file = {ScienceDirect Full Text PDF:/Users/martin_petr/Documents/zotero/storage/UDXCTZEZ/Simons and Sella - 2016 - The impact of recent population history on the del.pdf:application/pdf}
