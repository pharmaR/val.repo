	pages = {e1006340},
	file = {Full Text PDF:/Users/martin_petr/Documents/zotero/storage/3U2SQGQC/Juric et al. - 2016 - The Strength of Selection against Neanderthal Intr.pdf:application/pdf;s1.pdf:/Users/martin_petr/Documents/zotero/storage/IT28F95B/s1.pdf:application/pdf;s2.pdf:/Users/martin_petr/Documents/zotero/storage/AMJEBJMZ/Juric et al. - 2016 - The Strength of Selection against Neanderthal Intr.pdf:application/pdf;s3.pdf:/Users/martin_petr/Documents/zotero/storage/X98IX9JB/s3.pdf:application/pdf}
