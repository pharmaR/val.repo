	pages = {1237--1250},
	file = {PubMed Central Full Text PDF:/Users/martin_petr/Documents/zotero/storage/8RGIFNXD/Lacerda and Seoighe - 2014 - Population Genetics Inference for Longitudinally-S.pdf:application/pdf}
}

