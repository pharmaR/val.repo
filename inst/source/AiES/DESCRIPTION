Package: AiES
Type: Package
Title: Axon Integrity Evaluation System for Microscopy Images
Version: 0.99.6
Authors@R: c(
  person("Shinji", "Tokunaga", email = "tokunaga@ncnp.go.jp", role = c("aut", "cre"), comment = c(ORCID = "0000-0001-8398-3054")),
