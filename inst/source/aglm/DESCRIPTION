Package: aglm
Type: Package
Title: Accurate Generalized Linear Model
Version: 0.4.1
Authors@R: c(
    person("Kenji", "Kondo", role=c("aut", "cre", "cph"), email="kkondo.odnokk@gmail.com"),
    person("Kazuhisa", "Takahashi", role=c("ctb")),
    person("Hikari", "Banno", role=c("ctb"))
